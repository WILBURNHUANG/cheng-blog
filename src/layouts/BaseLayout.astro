---
import "../styles/global.css";

const {
  title = "Tech & Trek",
  description = "AI, Space Tech, Outdoor, Thoughts, Startups, Money",
} = Astro.props;
---
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen bg-gradient-to-br from-[#030a1a] via-[#050f24] to-[#0b1f3f] text-text antialiased">
    <div class="relative flex min-h-screen flex-col overflow-hidden font-sans">
      <div aria-hidden="true" class="pointer-events-none absolute -top-40 left-[-10%] h-[28rem] w-[28rem] rounded-full bg-accent/10 blur-3xl"></div>
      <div aria-hidden="true" class="pointer-events-none absolute -bottom-48 right-[-15%] h-[32rem] w-[32rem] rounded-full bg-[#7c5cff]/10 blur-[120px]"></div>

      <header class="sticky top-0 z-50 border-b border-white/10 bg-[rgba(8,17,37,0.85)] backdrop-blur-xl">
        <nav class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-5">
          <a href="/" class="flex items-center gap-3 text-sm font-semibold tracking-tight text-white">
            <span class="font-display text-base">Tech & Trek</span>
          </a>
          <div class="hidden items-center gap-1 rounded-full border border-white/10 bg-white/[0.06] px-2 py-1 text-[13px] text-muted shadow-[0_10px_30px_rgba(3,12,26,0.35)] lg:flex">
            <a href="/ai" class="rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">AI</a>
            <a href="/space-tech" class="rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">Space Tech</a>
            <a href="/outdoor-sports" class="rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">Outdoor</a>
            <a href="/thoughts" class="rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">Thoughts</a>
            <a href="/startups" class="rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">Startups</a>
            <a href="/money" class="rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">Money</a>
            <a href="/about" class="rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">About</a>
          </div>
          <a
            href="/search"
            class="inline-flex items-center gap-2 rounded-full border border-accent/50 bg-accent/10 px-5 py-2 text-sm font-medium text-accent shadow-[0_0_30px_rgba(92,225,255,0.3)] transition hover:border-accent hover:bg-accent/20 hover:text-[#031020]"
          >
            Browse
            <svg viewBox="0 0 20 20" fill="none" class="h-4 w-4">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="m11.75 4.75 4.5 4.5-4.5 4.5" />
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 9.25h12" />
            </svg>
          </a>
        </nav>
        <div class="mx-auto w-full max-w-6xl px-6 pb-4 lg:hidden">
          <div class="flex items-center gap-2 overflow-x-auto rounded-full border border-white/10 bg-white/[0.06] px-2 py-1 text-xs text-muted">
            <a href="/ai" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">AI</a>
            <a href="/space-tech" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">Space Tech</a>
            <a href="/outdoor-sports" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">Outdoor</a>
            <a href="/thoughts" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">Thoughts</a>
            <a href="/startups" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">Startups</a>
            <a href="/money" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">Money</a>
            <a href="/about" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:bg-white/10 hover:text-white">About</a>
          </div>
        </div>
      </header>

      <main class="relative z-10 mx-auto flex w-full max-w-6xl flex-1 flex-col gap-16 px-6 py-12">
        <slot />
      </main>
      <footer class="relative z-10 border-t border-white/10 bg-[rgba(8,17,37,0.85)] backdrop-blur-xl">
        <div class="mx-auto flex w-full max-w-6xl flex-col gap-3 px-6 py-10 text-sm text-muted md:flex-row md:items-center md:justify-between">
          <p>Â© {new Date().getFullYear()} Tech & Trek. All rights reserved.</p>
          <p class="text-xs">Exploring the intersections of intelligence, propulsion, and wilderness.</p>
        </div>
      </footer>
    </div>
  </body>
</html>
