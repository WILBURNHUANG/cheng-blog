---
import "../styles/global.css";

const { title = "Tech & Trek", description = "AI, Space Tech, Outdoor, Thoughts, Startups, Money" } = Astro.props;
---
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
        <script defer data-domain="YOURDOMAIN.com" src="https://plausible.io/js/script.js"></script>
  </head>
  <body class="min-h-screen bg-[#050d1f] text-text antialiased">
    <div class="relative flex min-h-screen flex-col overflow-hidden">
      <div aria-hidden="true" class="pointer-events-none absolute -top-24 left-1/2 h-[32rem] w-[32rem] -translate-x-1/2 rounded-full bg-sky-500/10 blur-3xl"></div>
      <div aria-hidden="true" class="pointer-events-none absolute bottom-[-12rem] right-[-6rem] h-[26rem] w-[26rem] rounded-full bg-indigo-500/10 blur-3xl"></div>

      <header class="sticky top-0 z-50 border-b border-white/5 bg-[#060e1e]/80 backdrop-blur">
        <nav class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-5">
          <a href="/" class="flex items-center gap-2 text-sm font-semibold tracking-tight text-white">
            Tech & Trek
          </a>
          <div class="hidden items-center gap-2 rounded-full border border-white/5 bg-white/5 px-2 py-1 text-sm text-muted lg:flex">
            <a href="/ai" class="rounded-full px-3 py-1 transition hover:text-white">AI</a>
            <a href="/space-tech" class="rounded-full px-3 py-1 transition hover:text-white">Space Tech</a>
            <a href="/outdoor-sports" class="rounded-full px-3 py-1 transition hover:text-white">Outdoor</a>
            <a href="/thoughts" class="rounded-full px-3 py-1 transition hover:text-white">Thoughts</a>
            <a href="/startups" class="rounded-full px-3 py-1 transition hover:text-white">Startups</a>
            <a href="/money" class="rounded-full px-3 py-1 transition hover:text-white">Money</a>
            <a href="/about" class="rounded-full px-3 py-1 transition hover:text-white">About</a>
          </div>
          <a
            href="/search"
            class="inline-flex items-center gap-2 rounded-full border border-accent/40 bg-accent/10 px-4 py-2 text-sm font-medium text-accent shadow-[0_0_25px_rgba(34,211,238,0.25)] transition hover:border-accent/60 hover:bg-accent/20"
          >
            Browse
            <svg viewBox="0 0 20 20" fill="none" class="h-4 w-4">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="m11.75 4.75 4.5 4.5-4.5 4.5" />
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 9.25h12" />
            </svg>
          </a>
        </nav>
        <div class="mx-auto w-full max-w-6xl px-6 pb-4 lg:hidden">
          <div class="flex items-center gap-2 overflow-x-auto rounded-full border border-white/5 bg-white/5 px-2 py-1 text-xs text-muted">
            <a href="/ai" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:text-white">AI</a>
            <a href="/space-tech" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:text-white">Space Tech</a>
            <a href="/outdoor-sports" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:text-white">Outdoor</a>
            <a href="/thoughts" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:text-white">Thoughts</a>
            <a href="/startups" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:text-white">Startups</a>
            <a href="/money" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:text-white">Money</a>
            <a href="/about" class="whitespace-nowrap rounded-full px-3 py-1 transition hover:text-white">About</a>
          </div>
        </div>
      </header>

      <main class="relative z-10 mx-auto flex w-full max-w-6xl flex-1 flex-col gap-12 px-6 py-12">
        <slot />
      </main>
      <footer class="relative z-10 border-t border-white/5 bg-[#060e1e]/80">
        <div class="mx-auto flex w-full max-w-6xl flex-col gap-3 px-6 py-10 text-sm text-muted md:flex-row md:items-center md:justify-between">
          <p>Â© {new Date().getFullYear()} Tech & Trek. All rights reserved.</p>
          <p class="text-xs">Exploring the intersections of artificial intelligence, space, and the outdoors.</p>
        </div>
      </footer>
    </div>
  </body>
</html>
