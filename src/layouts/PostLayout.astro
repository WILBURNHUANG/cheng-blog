---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
const { title, description, date, updated, hero, tags, category } = frontmatter;

const {
  PUBLIC_GISCUS_REPO,
  PUBLIC_GISCUS_REPO_ID,
  PUBLIC_GISCUS_CATEGORY,
  PUBLIC_GISCUS_CATEGORY_ID,
} = import.meta.env;

const giscusConfig = {
  repo: PUBLIC_GISCUS_REPO,
  repoId: PUBLIC_GISCUS_REPO_ID,
  category: PUBLIC_GISCUS_CATEGORY,
  categoryId: PUBLIC_GISCUS_CATEGORY_ID,
};

const isGiscusConfigured = Object.values(giscusConfig).every(Boolean);
---
<BaseLayout title={`${title} â€” Tech & Trek`} description={description}>
  <article class="mx-auto flex w-full max-w-4xl flex-col gap-10">
    <header class="overflow-hidden rounded-3xl border border-white/5 bg-[#0a1625]/70 shadow-[0_25px_90px_rgba(4,16,32,0.45)]">
      <div class="relative p-8 sm:p-10">
        <p class="text-xs uppercase tracking-[0.35em] text-accent">{category}</p>
        <h1 class="mt-4 text-3xl font-semibold text-white sm:text-4xl">{title}</h1>
        {description && <p class="mt-3 max-w-3xl text-sm text-muted sm:text-base">{description}</p>}
        <div class="mt-6 flex flex-wrap items-center gap-3 text-sm text-muted">
          <span class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-1.5 text-xs uppercase tracking-[0.35em] text-white/80">
            <span class="h-1.5 w-1.5 rounded-full bg-accent"></span>
            Field Report
          </span>
          <span>{date.toLocaleDateString("en-US", { month: "long", day: "numeric", year: "numeric" })}</span>
          {updated ? <span class="text-xs uppercase tracking-wide text-muted">Updated {updated.toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" })}</span> : null}
        </div>
        {tags?.length ? (
          <div class="mt-6 flex flex-wrap gap-2">
            {tags.map((t) => (
              <a
                href={`/tags/${encodeURIComponent(t)}`}
                class="rounded-full border border-white/10 bg-white/[0.04] px-3 py-1 text-xs text-muted transition hover:border-accent/60 hover:text-accent"
              >
                #{t}
              </a>
            ))}
          </div>
        ) : null}
        {hero && (
          <div class="mt-8 overflow-hidden rounded-[2rem] border border-white/10">
            <img src={hero} alt={title} class="w-full object-cover" loading="lazy" />
          </div>
        )}
        <div class="pointer-events-none absolute -top-32 right-[-10rem] h-64 w-64 rounded-full bg-accent/10 blur-3xl"></div>
      </div>
    </header>

    <div class="prose prose-invert max-w-none rounded-3xl border border-white/5 bg-[#060f1f]/80 p-8 sm:p-10">
      <slot />
    </div>

    <section class="rounded-3xl border border-white/5 bg-[#060f1f]/80 p-8 sm:p-10">
      <h2 class="text-lg font-semibold text-white">Join the discussion</h2>
      <p class="mt-1 text-sm text-muted">Thoughts, critiques, and curiosities are all welcome.</p>
      <div class="mt-6">
        {isGiscusConfigured ? (
          <script
            src="https://giscus.app/client.js"
            data-repo={giscusConfig.repo}
            data-repo-id={giscusConfig.repoId}
            data-category={giscusConfig.category}
            data-category-id={giscusConfig.categoryId}
            data-mapping="pathname"
            data-reactions-enabled="1"
            data-theme="dark"
            crossorigin="anonymous"
            async
          ></script>
        ) : (
          <p class="text-sm text-muted">
            Comments are currently disabled. Set the public Giscus environment variables to enable discussions.
          </p>
        )}
      </div>
    </section>
  </article>
</BaseLayout>
